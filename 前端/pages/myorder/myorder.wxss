/* pages/myorder/myorder.wxss */
page{
  background: #e4e4e4;
}

.jx_card{
  width: 100%;
  height: 166.14rpx;
  background:#339966;
  position: relative;
}

.jx_title{
  margin-left:35%;
  padding-top:40rpx;
  position: absolute;
  color:white;
  font-size:24px;
  font-weight: bold;
  font-family: 微软雅黑;
}

.jx_image{
  margin-left:5%;
  padding-top:36rpx;
  position: absolute;
  width:42px;
  height:42px;
}

.item-ans{ 
  width: 100%;
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between; 
  padding: 30rpx;
  box-sizing: border-box; 
  height: 150px;
  align-items: center;
  border-bottom: 5px solid #F2F2F2;
}

.avatar{
  width: 90px;
  height: 90px;
  position: relative;
  padding-right: 20rpx;
  padding-left:20rpx;
}

.expertInfo{
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

/*放那几个文字*/
.expertInfo .text{
  font-size: 14px;
  color:#000;
  margin-top:15rpx;
  margin-left:50rpx;
  position:relative;
  display: block;
}


.tab-content{
  background: white;
  margin-top: 50rpx;
  width: 90%;
  position: relative;
  margin-left:40rpx;
}
.scoll-h{
  height: 100%;
}