/* components/Search-bar/Search-bar.wxss */
.search-bar {
  display: inline-block;
  width: 100%;
  height: 100rpx;
}
.search-bar input {
  display: inline-block;
  background-color:#eee;
  position:relative;
  height: 100rpx;
  padding: 0rpx 20rpx 0rpx 100rpx;
  box-sizing: border-box;
  width: 100%;
}
.search-bar .search-input icon {
  position:absolute;
  left:5px;
  top:10px
}