/**index.wxss**/
.nav-header{
  position:relative;
  z-index:99;
  width:100%;
  height: 100rpx;
  background-color: white;
}
.page__bd{
  margin-top: 50px
}
.saoyisao{
  display: inline-block;
  background: white;
  height: 100rpx;
  width:100rpx;
  line-height:160rpx
}
.saoyisao image{
  width: 100rpx;
  height:100rpx
}
.search{
  display: inline-block;
  width: 100%;
  height: 100rpx;
}
.search input{
  display: inline-block;
  background-color:#eee;
  position:relative;
  height: 100rpx;
  padding: 0rpx 20rpx 0rpx 100rpx;
  box-sizing: border-box;
  width: 100%;
}
.search-input icon{
  position:absolute;
  left:5px;
  top:10px
}
.outside{
  position: absolute;
}

.viewclass{ 
  display: flex;  
  flex-direction: row;  
  justify-content: center;
}

