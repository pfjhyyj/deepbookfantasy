/* pages/search/search.wxss */
page{
  background: #e4e4e4;
} 
.jx_card{
  width: 100%;
  height: 90rpx;
  background:#339966;
  position: relative;
}

.jx_title{
  margin-left:35%;
  padding-top:20rpx;
  position: absolute;
  color:white;
  font-size:15px;
  font-weight: bold;
  font-family: 微软雅黑;
}



@import "../../components/wxSearch/wxSearch.wxss";
.nav-header{
  position:relative;
  z-index:99;
  width:100%;
  height: 100rpx;
  background-color: #eee
}
.page__bd{
  margin-top: 50px
}

.search view{
  display: inline-block;
}
.search.search-input{
  display: inline-block;
  background-color:white;
  position:relative;
  height: 50rpx;
  padding: 20rpx 75rpx 20rpx 70rpx;
}
.search-input icon{
  position:absolute;
  left:5px;
  top:10px;
}
.outside{
  position: absolute;
}
.search-select{
  display: inline-block
}
.local{
  display: inline-block;
  border: 1px red solid;
  border-radius: 3px;
  background-color: #eee;
  margin-left: 10px;
}
.history {
  width: 100%;
}
.history .history-item {
  width: 100%;
  height: 100rpx;
  line-height: 90rpx;
  background-color: #eee;
  border-bottom: 1px solid white;
}
.clearInput{
  left: -40px;
}
.search {
  height: 90rpx;
}

.search input{
  display: inline-block;
  background-color:#eee;
  position:relative;
  box-sizing: border-box;
  padding: 20rpx 30rpx 20rpx 100rpx;
  vertical-align: top;
  height: 100rpx;
  width: 550rpx;
}
.search button {
  height: 100rpx;
  width: 200rpx;
}
.search-input icon{
  position:absolute;
  left:5px;
  top:10px;
}
.history-reset {
  height: 100rpx;
  width: 100%;
  line-height: 90rpx;
  font-size: 40rpx;
}

.book-single{ 
  width: 100%;
  justify-content: space-between; 
  padding: 0 50rpx;
  box-sizing: border-box; 
  height: 360rpx;
  align-items: center;
  border-top: 5px solid #F2F2F2;
  border-bottom: 5px solid #F2F2F2;
  padding-top: 25rpx;
  padding-bottom: 25rpx;
}

.b-pic {
  width: 150rpx;
  height: 300rpx;
  position: relative;
  display: inline-block;
  vertical-align: top;
}

.book-info {
  width: 450rpx;
  font-size: 12px;
  color: #b0b0b0;
  line-height: 1.5em;
  padding-left: 50rpx; 
  display: inline-block;
}

/*放那几个文字*/
.book-info .text {
  font-size: 14px;
  color:#000;
  margin-top:15rpx;
  position:relative;
  display: block;
}

.book-info .name {
  text-align: center;
}

.load-more {
  margin: 0 50rpx;
}

.tip-description {
  width: 500rpx;
  margin: 50rpx auto;
  text-align: center;
}