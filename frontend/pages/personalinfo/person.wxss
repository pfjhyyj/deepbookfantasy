/* pages/personalinfo/person.wxss */
page{
  background: #e4e4e4;
}
.jx_card{
  width: 100%;
  height: 90rpx;
  background:#339966;
  position: relative;
}

.jx_title{
  margin-left:35%;
  padding-top:20rpx;
  position: absolute;
  color:white;
  font-size:15px;
  font-weight: bold;
  font-family: 微软雅黑;
}
.view-profile {
  margin: 50rpx 50rpx;
}

.view-profile .field {
  vertical-align: top;
}

.view-profile .field input,
.view-profile .field picker {
  display: inline-block;
  width: 450rpx;
  padding: 10rpx 20rpx;
  vertical-align: middle;
  box-sizing: border-box;
  height: 70rpx;
}

.view-profile .field label {
  display: inline-block;
  width: 150rpx;
  margin-right: 50rpx;
  vertical-align: middle;
  font-weight: bold;
  height: 70rpx;
}


.view-profile .field.field-description .text {
  margin-top: 20rpx;
  display: block;
}


.view-profile .field-edit .btn {
  margin: 10rpx;
  width: 200rpx;
}