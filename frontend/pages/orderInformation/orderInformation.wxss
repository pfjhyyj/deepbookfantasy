.jx_card{
  width: 100%;
  height: 166.14rpx;
  background:#339966;
  position: relative;
}

.jx_title{
  margin-left:35%;
  padding-top:40rpx;
  position: absolute;
  color:white;
  font-size:24px;
  font-weight: bold;
  font-family: 微软雅黑;
}

.item-ans{ 
  width: 100%;
  display: flex; 
  flex-grow: row no-wrap;
  justify-content: space-between; 
  padding: 30rpx;
  box-sizing: border-box; 
  height: 150px;
  border-bottom: 5px solid #F2F2F2;
}

/*图片*/
.avatar{
  width: 120px;
  height: 120px;
  position: absolute;
  margin-left: 25%;
}

.atext{
  position: relative;
  margin-top:20%;
  font-size:16px;
  font-family: 微软雅黑;
}

.bookname{
  font-size:16px;
  font-family: 微软雅黑;
  position: absolute;
  padding-top:10rpx;
}
.explainname{
  font-family: 微软雅黑;
  font-size:16px;
  position: absolute;
  padding-top:110rpx;
  padding-left: 0;
}

.explainname2{
  font-family: 微软雅黑;
  font-size:16px;
  position: absolute;
  padding-top:220rpx;
  padding-left: 0;
}
.explain{
  font-family: 微软雅黑;
  font-size:12px;
  position: relative;
  margin-top:110rpx;
  margin-left: 110rpx;
}

.expertInfo{
  font-size: 12px;
  flex-grow: 2;
  color: #b0b0b0;
  line-height: 1.5em;
}

/*放那几个文字*/
.expertInfo .text{
  font-size: 14px;
  color:#000;
  margin-top:15rpx;
  margin-left:50rpx;
  position:relative;
  display: block;
}


.tab-content{
  background: white;
  margin-top: 50rpx;
  width: 90%;
  position: relative;
  margin-left:40rpx;
}
.scoll-h{
