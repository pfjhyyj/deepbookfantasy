  width: 400rpx;
}

.field image {
  width: 400rpx;
  margin-left: 100rpx;
}

.field .description {
  display: block;
  margin-top: 10rpx; 
}

.page-item {
  width: 650rpx;
}

.page-item {
  width: 650rpx;
  margin: 0 auto;
}

.header {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #b0b0b0; 
  margin-bottom: 30rpx;
}

.header .title {
  text-align: center;
}