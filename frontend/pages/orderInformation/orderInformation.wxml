<!--pages/orderInformation/orderInformation.wxml-->
<view class="jx_card">
    <text class="jx_title">订单详情</text>
</view>

 <swiper class="tab-content" style="height:900rpx">
    <swiper-item>
        <scroll-view class="scoll-h" scroll-y="true"  >
            <view class="item-ans">
                <text class="atext">封面</text>
                <image class="avatar" src="{{bookInfo.image}}"></image> 
            </view> 

            <view class="item-ans">
                <view class="bookname">书名</view>
                <view class="explainname">简介:</view>
                <view class="explain">
                  <text>{{bookInfo.description}}
                  </text>
                </view>
            </view>  
            <view class="item-ans">
                <text class="bookname">上架时间：{{bookInfo.start}}</text>
                <text class="explainname">结束时间：{{bookInfo.end}}</text>
            </view> 
                             
         </scroll-view>
    </swiper-item>
</swiper>